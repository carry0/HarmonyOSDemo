<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_second"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:secondability_HelloWorld"
        ohos:text_size="40vp"/>

    <Button
        ohos:id="$+id:but_back"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:shape_test_but"
        ohos:bottom_padding="6vp"
        ohos:end_margin="10vp"
        ohos:end_padding="10vp"
        ohos:start_margin="10vp"
        ohos:start_padding="10vp"
        ohos:text="跳转"
        ohos:text_color="#fff"
        ohos:text_size="20vp"
        ohos:top_margin="10vp"
        ohos:top_padding="6vp"/>

</DirectionalLayout>