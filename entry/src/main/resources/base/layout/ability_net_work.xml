<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:but_get_picture"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:shape_test_but"
        ohos:bottom_padding="6vp"
        ohos:end_margin="10vp"
        ohos:end_padding="10vp"
        ohos:start_margin="10vp"
        ohos:start_padding="10vp"
        ohos:text="获取网络图片"
        ohos:text_color="#fff"
        ohos:text_size="20vp"
        ohos:top_margin="10vp"
        ohos:top_padding="6vp"/>

    <Image
        ohos:image_src="$media:icon"
        ohos:id="$+id:iv_show_picture"
        ohos:height="200vp"
        ohos:width="match_parent"/>

</DirectionalLayout>